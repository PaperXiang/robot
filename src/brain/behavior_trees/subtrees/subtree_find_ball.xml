<!-- 摄像头跟踪球 -->

<root BTCPP_format="4" >
  <BehaviorTree ID="FindBall">
     <Sequence name="root">
        <Fallback>
           <!-- 八字扫描 + 慢速身体旋转（并行执行） -->
           <Parallel success_count="1">
              <GoBackInField />
              <CamLissajousScan yaw_amplitude="1.3" pitch_center="0.6" pitch_amplitude="0.5" cycle_msec="2200" />
              <RobotFindBall vyaw_limit="1.0" />
           </Parallel>
           <!-- 返回Ready位置 -->
           <ReactiveSequence>
              <GoToReadyPosition vx_limit="0.7" />
              <Sleep msec="2000" />
           </ReactiveSequence>
        </Fallback>
      </Sequence>
  </BehaviorTree>
</root>
