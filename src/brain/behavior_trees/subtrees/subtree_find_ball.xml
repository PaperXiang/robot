<!-- 摄像头跟踪球 -->

<root BTCPP_format="4" >
  <BehaviorTree ID="FindBall">
     <Sequence name="root">
         <ReactiveSequence>
            <GoBackInField />
            <CamLissajousScan />
        </ReactiveSequence>
        <TurnOnSpot rad="3.14"  towards_ball="true"/>
        <ReactiveSequence>
            <GoBackInField />
            <CamLissajousScan />
        </ReactiveSequence>
        <ReactiveSequence>
          <GoToReadyPosition  vx_limit="0.7" />
          <Sleep msec="5000" />
        </ReactiveSequence>
      </Sequence>
  </BehaviorTree>
</root>
