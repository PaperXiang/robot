<!-- 摄像头跟踪球 -->

<root BTCPP_format="4" >
  <BehaviorTree ID="FindBall">
     <Sequence name="root">
        <Fallback>
           <!-- 八字扫描 + 慢速身体旋转 -->
           <ReactiveSequence>
              <GoBackInField />
              <CamLissajousScan />
              <RobotFindBall vyaw_limit="0.8" />
           </ReactiveSequence>
           <!-- 返回Ready位置 -->
           <ReactiveSequence>
              <GoToReadyPosition vx_limit="0.7" />
              <Sleep msec="2000" />
           </ReactiveSequence>
        </Fallback>
      </Sequence>
  </BehaviorTree>
</root>
