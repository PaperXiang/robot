<!-- 摄像头跟踪球 -->

<root BTCPP_format="4" >
  <BehaviorTree ID="Locate">
     <!-- 使用Fallback替代Sequence：找到可靠定位后提前退出，预计CPU降低30-50% -->
     <Fallback name="root">
        <SelfLocate mode="trust_direction" min_confidence="0.8" />
        <SelfLocate1M msecs_interval="300" max_dist="2.0" max_drift="1.5" min_confidence="0.8" />
        <SelfLocate2T msecs_interval="300" max_dist="2.0" max_drift="1.5" min_confidence="0.8" />
        <SelfLocatePT msecs_interval="300" max_dist="2.0" max_drift="1.5" min_confidence="0.8" />
        <SelfLocateLT msecs_interval="300" max_dist="2.0" max_drift="1.5" min_confidence="0.75" />
        <SelfLocate2X msecs_interval="300" max_dist="2.0" max_drift="1.5" min_confidence="0.75" />
        <SelfLocateBorder msecs_interval="300" max_dist="2.0" max_drift="1.5" min_confidence="0.5"/>
     </Fallback>
  </BehaviorTree>
</root>
